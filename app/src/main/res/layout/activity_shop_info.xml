<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_head_search"
            android:drawableLeft="@mipmap/icon_head_search"
            android:drawablePadding="4dp"
            android:hint="搜索店铺内商品"
            android:padding="8dp"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:background="@mipmap/bg_shop_head"
                app:layout_scrollFlags="scroll|enterAlways">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="64dp"
                    android:src="@mipmap/icon_shop_logo" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/white_14"
                    android:layout_alignTop="@+id/iv_logo"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/iv_logo" />

                <TextView
                    android:id="@+id/tv_shop_type"
                    style="@style/white_10"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:background="@drawable/bg_red1"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp" />

                <TextView
                    android:id="@+id/tv_focus_count"
                    style="@style/white_12"
                    android:layout_alignBaseline="@+id/tv_shop_type"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_shop_type"
                    android:textColor="@color/white1" />

                <TextView
                    android:id="@+id/tv_focus"
                    style="@style/white_12"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="56dp"
                    android:background="@drawable/bg_red1"
                    android:drawableLeft="@mipmap/icon_shop_focus"
                    android:drawablePadding="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="关注" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/iv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_shop_active" />

                    <TextView
                        android:id="@+id/tv_home"
                        style="@style/gray_12"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:text="店铺首页"
                        android:textColor="@color/red3"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="58dp"
                        android:layout_height="4dp"
                        android:background="@color/red3"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_all_count"
                        style="@style/gray_14"
                        android:text="0"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_all_label"
                        style="@style/gray_12"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="8dp"
                        android:text="全部商品"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="58dp"
                        android:layout_height="4dp"
                        android:background="@color/red3"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_hot_count"
                        style="@style/gray_14"
                        android:text="0"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_hot_label"
                        style="@style/gray_12"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="8dp"
                        android:text="热销"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="58dp"
                        android:layout_height="4dp"
                        android:background="@color/red3"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_new_count"
                        style="@style/gray_14"
                        android:text="0"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_new_label"
                        style="@style/gray_12"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="8dp"
                        android:text="上新"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="58dp"
                        android:layout_height="4dp"
                        android:background="@color/red3"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <View style="@style/main_line" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>

    <View style="@style/main_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_detail"
            style="@style/gray_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="店铺详情" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/main_line" />

        <LinearLayout
            android:id="@+id/ll_hot_sorts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/gray_16"
                android:drawableLeft="@mipmap/icon_shop_groups"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="热门分类" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/main_line" />

        <LinearLayout
            android:id="@+id/ll_cus_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cus_phone"
                style="@style/gray_16"
                android:drawableLeft="@mipmap/icon_shop_cus_phone"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="联系客服" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
