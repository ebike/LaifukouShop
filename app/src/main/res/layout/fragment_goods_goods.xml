<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="100%w"
                app:layout_widthPercent="100%w">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <View style="@style/main_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/gray_14" />
            </LinearLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="8dp">

        <TextView
            style="@style/gray6_12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goodsinfo_shop"
            android:gravity="center"
            android:text="店铺" />

        <TextView
            style="@style/gray6_12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goodsinfo_collect"
            android:gravity="center"
            android:text="关注" />

        <TextView
            style="@style/gray6_12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goodsinfo_cart"
            android:gravity="center"
            android:text="购物车" />

        <TextView
            style="@style/white_14"
            android:layout_height="match_parent"
            android:width="150dp"
            android:background="@color/red"
            android:gravity="center"
            android:text="加入购物车" />
    </LinearLayout>

    <View
        style="@style/main_line"
        android:layout_above="@+id/ll_bottom" />

</RelativeLayout>