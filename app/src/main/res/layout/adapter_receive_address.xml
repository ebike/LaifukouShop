<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/tv_name"
            style="@style/gray_14" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/gray_14"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/gray9_12"
            android:layout_below="@+id/tv_name"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="13dp" />
    </RelativeLayout>

    <View
        style="@style/main_line"
        android:layout_marginLeft="9dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">

        <TextView
            android:id="@+id/tv_is_default"
            style="@style/gray9_14"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/icon_circle_nosel"
            android:drawablePadding="9dp"
            android:text="默认地址" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/gray9_14"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/icon_trash"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="删除" />

        <TextView
            android:id="@+id/tv_edit"
            style="@style/gray9_14"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/tv_delete"
            android:drawableLeft="@mipmap/icon_edit"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="编辑" />

    </RelativeLayout>

    <View style="@style/main_line" />
</LinearLayout>