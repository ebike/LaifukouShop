<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <ImageView
            android:id="@+id/iv_message"
            style="@style/style_base_w"
            android:layout_alignParentRight="true"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:src="@mipmap/icon_head_msg" />

        <ImageView
            android:id="@+id/iv_setting"
            style="@style/style_base_w"
            android:layout_toLeftOf="@id/iv_message"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:src="@mipmap/icon_set" />

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_message"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="32dp"
                android:src="@mipmap/icon_default_head" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/white_18"
                    android:text="登录/注册" />

                <TextView
                    android:id="@+id/tv_manage"
                    style="@style/white_10"
                    android:layout_marginTop="16dp"
                    android:text="账户管理 >"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_all_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                style="@style/black_12"
                android:text="全部订单" />

            <TextView
                style="@style/gray_12"
                android:layout_alignParentRight="true"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/icon_right_arrow_gray"
                android:text="查看全部订单" />

        </RelativeLayout>

        <View
            style="@style/main_line"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tv_payment"
                style="@style/black_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/icon_order_topay"
                android:gravity="center"
                android:text="待付款"
                android:textColor="@color/black1" />

            <TextView
                android:id="@+id/tv_delivery"
                style="@style/black_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/icon_order_tosend"
                android:gravity="center"
                android:text="待发货"
                android:textColor="@color/black1" />

            <TextView
                android:id="@+id/tv_take_delivery"
                style="@style/black_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/icon_order_toget"
                android:gravity="center"
                android:text="待收货"
                android:textColor="@color/black1" />

            <TextView
                android:id="@+id/tv_comment"
                style="@style/black_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/icon_order_tocomment"
                android:gravity="center"
                android:text="待评论"
                android:textColor="@color/black1" />

            <TextView
                android:id="@+id/tv_refund_after_sales"
                style="@style/black_12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/icon_order_tochange"
                android:gravity="center"
                android:text="退款/售后"
                android:textColor="@color/black1" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/main_line" />

    <View
        style="@style/main_line"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                style="@style/black_12"
                android:text="我的资产" />

            <TextView
                style="@style/gray_12"
                android:layout_alignParentRight="true"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/icon_right_arrow_gray"
                android:text="查看资产流水" />

        </RelativeLayout>

        <View
            style="@style/main_line"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:id="@+id/ll_account_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_account_balance"
                    style="@style/black_16"
                    android:text="￥0" />

                <TextView
                    style="@style/black_12"
                    android:layout_marginTop="16dp"
                    android:text="账户余额"
                    android:textColor="@color/black1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gold_coins"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gold_coins"
                    style="@style/black_16"
                    android:text="0" />

                <TextView
                    style="@style/black_12"
                    android:layout_marginTop="16dp"
                    android:text="金币个数"
                    android:textColor="@color/black1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_silver_coins"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_silver_coins"
                    style="@style/black_16"
                    android:text="0" />

                <TextView
                    style="@style/black_12"
                    android:layout_marginTop="16dp"
                    android:text="银币个数"
                    android:textColor="@color/black1" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View style="@style/main_line" />

    <View
        style="@style/main_line"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_goods_focus"
            style="@style/black_12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goods_collect"
            android:gravity="center"
            android:text="商品关注"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/tv_shop_focus"
            style="@style/black_12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_shop_collect"
            android:gravity="center"
            android:text="商家关注"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/tv_browsing_history"
            style="@style/black_12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goods_browse"
            android:gravity="center"
            android:text="浏览记录"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/tv_feedback"
            style="@style/black_12"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_feedback"
            android:gravity="center"
            android:text="问题反馈"
            android:textColor="@color/black1" />
    </LinearLayout>

</LinearLayout>