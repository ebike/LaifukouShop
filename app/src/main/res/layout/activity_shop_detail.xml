<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="39dp"
            android:background="@drawable/border_line"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="109dp"
                android:layout_height="38dp"
                android:src="@mipmap/icon_shop_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/gray_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_type"
                    style="@style/white_10"
                    android:background="@drawable/bg_red1"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp" />

                <TextView
                    android:id="@+id/tv_focus_count"
                    style="@style/gray9_12"
                    android:layout_marginLeft="8dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_focus"
            style="@style/white_12"
            android:background="@drawable/bg_red1"
            android:drawableLeft="@mipmap/icon_shop_focus"
            android:drawablePadding="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="关注" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_all_count"
                style="@style/gray_14"
                android:text="0"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_all_label"
                style="@style/gray_12"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp"
                android:text="全部商品"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/main_line" />

        <LinearLayout
            android:id="@+id/ll_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_hot_count"
                style="@style/gray_14"
                android:text="0"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_hot_label"
                style="@style/gray_12"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp"
                android:text="热销"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/main_line" />

        <LinearLayout
            android:id="@+id/ll_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_new_count"
                style="@style/gray_14"
                android:text="0"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_new_label"
                style="@style/gray_12"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp"
                android:text="上新"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                style="@style/gray_16"
                android:text="商家简介" />

            <TextView
                android:id="@+id/tv_summary"
                style="@style/gray6_16"
                android:layout_marginLeft="16dp"
                android:singleLine="true" />

        </LinearLayout>

        <View
            style="@style/main_line"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                style="@style/gray_16"
                android:text="开店日期" />

            <TextView
                android:id="@+id/tv_create_date"
                style="@style/gray6_16"
                android:layout_marginLeft="16dp"
                android:singleLine="true" />

        </LinearLayout>

        <View
            style="@style/main_line"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                style="@style/gray_16"
                android:text="联系客服" />

            <TextView
                android:id="@+id/tv_cus_phone"
                style="@style/gray6_16"
                android:layout_marginLeft="16dp"
                android:singleLine="true" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
