<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/icon_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_goods"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/white_18"
                    android:layout_centerInParent="true"
                    android:text="商品" />

                <View
                    android:id="@+id/v_goods"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/white_18"
                    android:layout_centerInParent="true"
                    android:text="详情" />

                <View
                    android:id="@+id/v_detail"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/white_18"
                    android:layout_centerInParent="true"
                    android:text="评价" />

                <View
                    android:id="@+id/v_evaluate"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/main_line" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop"
            style="@style/gray6_12"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goodsinfo_shop"
            android:gravity="center"
            android:text="店铺" />

        <TextView
            android:id="@+id/tv_goods_focus"
            style="@style/gray6_12"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goodsinfo_collect"
            android:gravity="center"
            android:text="关注" />

        <TextView
            android:id="@+id/tv_car"
            style="@style/gray6_12"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_goodsinfo_cart"
            android:gravity="center"
            android:text="购物车" />

        <TextView
            android:id="@+id/tv_into_car"
            style="@style/white_14"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:background="@color/red"
            android:gravity="center"
            android:text="加入购物车" />
    </LinearLayout>
</LinearLayout>
