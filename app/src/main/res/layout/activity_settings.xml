<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/icon_back" />

        <TextView
            style="@style/white_18"
            android:layout_centerInParent="true"
            android:text="设置" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cache_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            style="@style/gray_18"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="缓存" />

        <TextView
            android:id="@+id/tv_cache_file"
            style="@style/gray6_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0Byte" />

    </RelativeLayout>

    <View
        style="@style/main_line"
        android:layout_marginLeft="16dp" />

    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            style="@style/gray_18"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="关于" />

        <ImageView
            android:id="@+id/image_arrow"
            style="@style/style_base_w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/navigation" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/gray6_16"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/image_arrow"
            android:text="V1.0" />

    </RelativeLayout>

    <View style="@style/main_line" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_red"
        android:text="退出账号"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
